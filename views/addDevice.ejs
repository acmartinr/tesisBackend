<html>
    <head>

    </head>
    <body>
      <h1> Add new Device </h1>

      
      <form method="POST" action="/registerDevice">
        <h3 style="display: inline">Tipo de dispositivo </h3>    
        <select name="device[type]">
            <option value="light" selected>Light</option> 
            <option value="sensor">Sensor</option>
            <option value="Air">Air</option>
            <option value="Riego">Riego</option>
            <option value="Energy">Energy</option>
            <option value="Arduino">Arduino</option>
          </select>
          <br>
          <br>
          <h3 style="display: inline">ID de dispositivo </h3> <input name='device[id]' placeholder="Device ID" />  
          <br>
          <br>
          <h3 style="display: inline">Nombre de dispositivo </h3> <input name='device[name]' placeholder="Type name here" />   
        <br>
          <button type="submit" style="margin-top: 40px">Confirmar</button>
      </form>


    </body>
</html>